from mcpi.minecraft import Minecraft
mc=Minecraft.create()
x,y,z=mc.player.getTilePos()

line1=[]
line2=[]
line3=[]

for i in range(1,4):
    line1.append(1*i)
    line2.append(2*i)
    line3.append(3*i)
print(line1,line2,line3)
mc.setSign(x,y,z,63,0,str(line1),str(line2),str(line3))




from mcpi.minecraft import Minecraft
mc=Minecraft.create()
x,y,z=mc.player.getTilePos()
number=1
for i in range(4):
    for j in range(number):
        mc.spawnEntity(x,y,z,60)
    number=number*2
    mc.postToChat("這次生成了"+str(number)+"隻馬")

from mcpi.minecraft import Minecraft
mc=Minecraft.create()
x,y,z=mc.player.getTilePos()
import random
for i in range(10):
    r=random.randrange(1,5)
    b=random.randrange(235,252)
    
    
    
    if r ==1:
        mc.setBlocks(x,y,z,x+4,y,z,b)
        x=x+4
    elif r ==2:
        mc.setBlocks(x,y,z,x-4,y,z,b)
    elif r ==3:
        mc.setBlocks(x,y,z,x,y,z+4,b)
    elif r ==4:
        mc.setBlocks(x,y,z,x,y,z-4,b)
    elif r==5:
        mc.setblocks(x,y+4,z,x,y,z,b)
    elif r ==6:
        mc.setblocks(x,y-4,z,x,y,z,b)



